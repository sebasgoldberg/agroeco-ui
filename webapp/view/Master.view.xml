<mvc:View
		height="100%"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		displayBlock="true"
        controllerName='iamsoft.agroeco.controller.Master'>

        <semantic:MasterPage 
			title="{i18n>master.title}"
			id="masterPage">
			<Toolbar>
				<SearchField
					search="onSearch"
					width="100%"
					text="" />
			</Toolbar>
            <List 
				items="{/}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster' }"
				selectionChange="onSelectList"
				id='listsList'
				updateStarted="onListUpdateStarted"
				growing="true"
				growingScrollToLoad="true"
				growingThreshold="6"
				>
				<items>
					<ObjectListItem
							title="{name}"
							type="Active"
							press="onSelectList"
							number="{
								parts: [{path: 'total'}, {path: ''}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false 
								} 
							}"
							numberUnit="ARS">
						<firstStatus>
							<ObjectStatus
								text="{
									path: 'pending_items',
									formatter: '.formatter.listStatusText'
									}"
								state="{
									path: 'pending_items',
									formatter: '.formatter.listStatusState'
									}" />
						</firstStatus>
						<attributes>
							<ObjectAttribute text="{date}" />
							<!-- <ObjectAttribute text="145 x 140 x 360 cm" /> -->
						</attributes>
						<!-- <markers>
							<ObjectMarker type="Favorite" />
							<ObjectMarker type="Flagged" />
						</markers> -->
					</ObjectListItem>
				</items>
				

            </List>
            <semantic:customFooterContent>
                <Button icon="sap-icon://add" type="Emphasized"
					press="onAddItem" id="addListButton"/>
            </semantic:customFooterContent>
        </semantic:MasterPage>

</mvc:View>
