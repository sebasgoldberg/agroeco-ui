<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Planning"
    >


	<Table
		headerText="Products"
		items="{
			path:'',
			sorter: {
				path: 'item.id',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="PlanificaciÃ³n" level="H2"/>
                <ToolbarSpacer/>
                
                <Button	text="" press="onOpenAddResolutionDialog" icon="sap-icon://add"/>

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column
				mergeDuplicates="true"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad" />
				</header>
			</Column>


			<Column mergeDuplicates="true">
				<header>
					<Text text="Proveedor" />
				</header>
			</Column>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column
				mergeDuplicates="true"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad" />
				</header>
			</Column>
			
		</columns>
		<ColumnListItem>
			<ObjectIdentifier title="{item/product_uom/product/title}" text="" />
			<ObjectNumber
				number="{item/quantity}" unit="{item/product_uom/uom/name}"
				state="" />

			<ObjectIdentifier title="{product_vendor/vendor/name}" text="" />
			<ObjectIdentifier title="{product_vendor/name}" text="" />
			<ObjectNumber
				number="{quantity}" unit="{product_vendor/uom/name}"
				state="" />

		</ColumnListItem>
	</Table>

</mvc:View>