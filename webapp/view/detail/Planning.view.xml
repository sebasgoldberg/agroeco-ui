<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Planning"
    >

	<Table
		id="resolutionsTable"
		headerText="Products"
		mode="MultiSelect"
		items="{
			path:'/',
			sorter: {
				path: 'vendor_product/vendor/name',
				descending: false,
				group: true
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="PlanificaciÃ³n" level="H2"/>
                <ToolbarSpacer/>
                
                <!-- <Button	text="" press="onAddResolution" icon="sap-icon://add"/> -->
                <Button	text="" press="onRemoveResolution" icon="sap-icon://less"/>
                <!-- <Button	text="" press="onSendResolutions" icon="sap-icon://email"/> -->

            </Toolbar>
        </headerToolbar>

		<columns>
			<!-- <Column>
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad" />
				</header>
			</Column> -->


			<Column>
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Proveedor" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Contenido" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Precio Total" />
				</header>
			</Column>
			
		</columns>
		<ColumnListItem>
			<!-- <ObjectIdentifier title="{item/product_uom/product/title}" text="" />
			<ObjectNumber
				number="{item/quantity}" unit="{item/product_uom/uom/name}"
				state="" /> -->

			<ObjectIdentifier title="{vendor_product/name}" 
				text="" />
			<Text text="{vendor_product/vendor/name}" />
			<ObjectNumber
				number="{
					path: 'quantity',
					type: 'sap.ui.model.type.Float'
				}"
				unit=""
				state="" />
			<ObjectNumber
				number="{
					parts: [{path: 'vendor_product/quantity'}, {path: ''}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false 
					} 
				}"
				unit="{vendor_product/product_uom/uom/name}"
				state="" />
			<ObjectNumber
				number="{
					parts: [{path: 'price'}, {path: ''}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false 
					} 
				}"
				unit="ARS"
				state="" />

		</ColumnListItem>
	</Table>

</mvc:View>