<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Orders"
    >


	<Table
		headerText="Pedidos"
		items="{
			path:'/',
			sorter: {
				path: 'vendor.name',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="Pedidos" level="H2"/>
                <ToolbarSpacer/>
                
                <Button	text="" press="onOpenAddPedidoDialog" icon="sap-icon://add"/>

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Proveedor" />
				</header>
			</Column>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Pedido" />
				</header>
			</Column>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Fecha SolicitaciÃ³n" />
				</header>
			</Column>
			<Column
				mergeDuplicates="true"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Importe a Pagar" />
				</header>
			</Column>
			
		</columns>
		<ColumnListItem>
			<ObjectIdentifier title="{vendor.name}" text="" />
			<ObjectIdentifier title="{id}" text="" />
			<ObjectIdentifier title="{date}" text="" />
			<ObjectNumber
				number="{price}" unit="ARS"
				state="" />

		</ColumnListItem>
	</Table>

</mvc:View>