<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Items"
    >


	<Table
		headerText="Products"
		items="{
			path:'/ProductCollection',
			sorter: {
				path: 'SupplierName',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="Items" level="H2"/>
                <ToolbarSpacer/>
                
                <Button	text="" press="onOpenAddItemDialog" icon="sap-icon://add"/>

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Supplier" />
				</header>
			</Column>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Product" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End" >
				<header>
					<Text text="Dimensions" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Weight" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="Price" />
				</header>
			</Column>
		</columns>
		<ColumnListItem>
			<Text text="{SupplierName}" />
			<ObjectIdentifier title="{Name}" text="{ProductId}" />
			<Text text="{Width} x {Depth} x {Height} {DimUnit}" />
			<ObjectNumber
				number="{WeightMeasure}" unit="{WeightUnit}"
				state="{
					path: 'WeightMeasure'
				}" />
			<ObjectNumber
					number="{
						parts:[{path:'Price'},{path:'CurrencyCode'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
					unit="{CurrencyCode}" />
		</ColumnListItem>
	</Table>

</mvc:View>