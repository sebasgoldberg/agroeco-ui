<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Items"
    >


	<Table
		id="itemsTable"
		headerText="Products"
		mode="MultiSelect"
		keyboardMode="Edit"
		items="{
			path:'/',
			sorter: {
				path: 'id',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="Items" level="H2"/>
                <ToolbarSpacer/>
                
                <Button	text="" press="onAddItem" icon="sap-icon://add" id="addItemButton" /> 
                <Button	text="" press="onRemoveItem" icon="sap-icon://less"/>
				<Button	text="" press="onSave" icon="sap-icon://save"/>
                <!-- <Button	text="" press="onAddResolution" icon="sap-icon://activities"/> -->
                <Button	text="" press="onResolve" icon="sap-icon://activate"/>

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column>
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad Requerida" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Estado" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Faltante/Exedente" />
				</header>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier title="{product_uom/product/title}" text="" />
					<Input 
						submit="onSubmitQuantity"
						liveChange="onQuantityChange"
						editable="true"
						value="{
							parts: [{path: 'quantity'}, {path: 'product_uom/uom/name'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {
								showMeasure: true
							} 
						}" />
					<!-- <ObjectNumber
						editable="true"
						number="{
							path: 'quantity',
							type: 'sap.ui.model.type.Float'
						}"
						unit="{product_uom/uom/name}"
						state="" /> -->
					<ObjectStatus 
						text="{
							path: 'is_solved',
							formatter: '.formatter.itemStatusText'
						}"
						state="{
							path: 'is_solved',
							formatter: '.formatter.itemStatusState'
						}"/>
					<ObjectNumber
						number="{
							path: 'surplus_quantity',
							type: 'sap.ui.model.type.Float'
						}"
						unit="{product_uom/uom/name}"
						state="{
							parts: [ { path: 'quantity' }, { path: 'surplus_quantity' } ],
							formatter: '.formatter.itemSurplusQuantityState'
						}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>

</mvc:View>