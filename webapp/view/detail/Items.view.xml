<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Items"
    >


	<Table
		headerText="Products"
		items="{
			path:'',
			sorter: {
				path: 'id',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="Items" level="H2"/>
                <ToolbarSpacer/>
                
                <Button	text="" press="onAddItem" icon="sap-icon://add"/>

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column>
				<header>
					<Text text="Producto" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Cantidad Requerida" />
				</header>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier title="{product_uom/product/title}" text="" />
					<ObjectNumber
						number="{quantity}" unit="{product_uom/uom/name}"
						state="" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>

</mvc:View>