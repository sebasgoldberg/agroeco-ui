<mvc:View
		height="100%"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		displayBlock="true"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        controllerName="iamsoft.agroeco.controller.detail.Vendors"
        id="vendorsView">

    <f:Form editable="true">
        <f:layout>
            <f:ResponsiveGridLayout
                labelSpanXL="1"
                labelSpanL="1"
                labelSpanM="1"
                labelSpanS="1"
                adjustLabelSpan="false"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false" />
        </f:layout>
        <f:FormContainer>
            <f:formElements>
                <f:FormElement label="">
                    <f:fields>
                        <CheckBox text="Considerar Proveedores Marcados" 
                            selected="{list>/filter_vendors}" 
                            select="onSelectFilterVendors"/>
                    </f:fields>
                </f:FormElement>
            </f:formElements>
        </f:FormContainer>
    </f:Form>

	<Table
		id="vendorsTable"
		headerText="Proveedores a considerar"
        mode="MultiSelect"
		items="{
			path:'/',
			sorter: {
				path: 'name',
				descending: false
			}
		}" 
        selectionChange="onVendorsSelectionChange">

        <headerToolbar>
            <Toolbar>
                <Title text="Proveedores" level="H2"/>
                <ToolbarSpacer/>
                <!-- <CheckBox text="Utilizar Marcados" selected="{list>/filter_vendors}" />
                <Button	text="" press="onSave" icon="sap-icon://save"/> -->

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column>
				<header>
					<Text text="Proveedor" />
				</header>
			</Column>			
		</columns>
		<ColumnListItem>
			<ObjectIdentifier title="{name}" text="" />
		</ColumnListItem>
	</Table>

</mvc:View>
