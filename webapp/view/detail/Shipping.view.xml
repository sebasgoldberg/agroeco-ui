<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="iamsoft.agroeco.controller.detail.Shipping"
    >


	<Table
		headerText="Envío"
		items="{
			path:'/',
			sorter: {
				path: 'vendor.name',
				descending: false
			}
		}" >

        <headerToolbar>
            <Toolbar>
                <Title text="Envíos" level="H2"/>
                <ToolbarSpacer/>
                
                <!-- <Button	text="" press="onOpenAddPedidoDialog" icon="sap-icon://add"/> -->

            </Toolbar>
        </headerToolbar>

		<columns>
			<Column>
				<header>
					<Text text="Proveedor" />
				</header>
			</Column>
			<Column >
				<header>
					<Text text="Tipo de Envío" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="Importe" />
				</header>
			</Column>
			
		</columns>
		<ColumnListItem>
			<ObjectIdentifier title="{vendor/name}" text="" />
			<Text text="{name}" />
			<ObjectNumber
				number="{price}" unit="ARS"
				state="{=${is_lower_price} > 0 ? 'Success' : 'Warning'}" />
		</ColumnListItem>
	</Table>

</mvc:View>