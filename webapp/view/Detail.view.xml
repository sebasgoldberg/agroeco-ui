<mvc:View
		height="100%"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		displayBlock="true"
        controllerName="iamsoft.agroeco.controller.Detail">

			<semantic:DetailPage
					title="{i18n>detail.title}: {/name} ({/date})"
                    showNavButton="{device>/system/phone}" navButtonPress="handleNavButtonPress">

                <ObjectHeader
                    binding="{/}"
                    title="{name}"
                    number="{total}"
                    numberUnit="ARS" >
                    <statuses>
                        <ObjectStatus text="{=${pending_items} > 0 ? ${pending_items}+' Pendiente(s)': 'Planificado'}"
								state="{=${pending_items} > 0 ? 'Error' : 'Success'}" />
                        <!-- <ObjectStatus
                            text="In Stock"
                            state="Success" /> -->
                    </statuses>
                    <attributes>
                        <ObjectAttribute text="{date}" />
                        <!-- <ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />
                        <ObjectAttribute text="{Description}" />
                        <ObjectAttribute
                            text="www.sap.com"
                            active="true"
                            press="handleLinkObjectAttributePress" /> -->
                    </attributes>
                </ObjectHeader>

                <IconTabBar
                    expanded="true"
                    id="idIconTabBar"
                    class="sapUiResponsiveContentPadding"
                    select="onTabSelect"
                    selectedKey="{view>/selectedTabKey}" >
                    <items>

        <!-- sap-icon://activity-items -->
                        <IconTabFilter
                            icon="sap-icon://cart-4"
                            iconColor=""
                            design="Vertical"
                            count="{/items_count}"
                            text="Items"
                            key="items"
                            id="itemsTab">
                            <!-- <mvc:XMLView viewName="iamsoft.agroeco.view.detail.Items"/> -->
                        </IconTabFilter>

                        <IconTabSeparator icon="sap-icon://open-command-field" />

                        <IconTabFilter
                            icon="sap-icon://activities"
                            iconColor=""
                            design="Vertical"
                            count="{/resolutions_count}"
                            text="Planificación"
                            key="planning"
                            id="planningTab" >
                            <!-- <mvc:XMLView viewName="iamsoft.agroeco.view.detail.Planning"/> -->
                        </IconTabFilter>
                            
                        <IconTabSeparator icon="sap-icon://open-command-field" />

                        <IconTabFilter
                            icon="sap-icon://shipping-status"
                            iconColor=""
                            design="Vertical"
                            count="{/shipping_count}"
                            text="Envío"
                            key="shipping"
                            id="shippingTab" >
                            <!-- <mvc:XMLView viewName="iamsoft.agroeco.view.detail.Orders"/> -->
                        </IconTabFilter>

                    </items>
                </IconTabBar>
                
				<semantic:customFooterContent>
					<Button icon="sap-icon://less" type="Reject" press="onDeleteList"/>
					<!-- <Button icon="sap-icon://activities" type="Emphasized"/>
					<Button icon="sap-icon://paper-plane" type="Accept"/> -->
				</semantic:customFooterContent>

			</semantic:DetailPage>

</mvc:View>
