{
	"_version": "1.5.0",
	"sap.app": {
		"id": "iamsoft.agroeco",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"resources": "resources.json",
		"ach": "ach",
		"dataSources": {
			"mainService": {
				"uri": "http://cerebro.vpn.iamsoft.org:8100/purchase/",
				"type": "JSON"
			}
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"
		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "iamsoft.agroeco.view.App",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"": {
				"dataSource": "mainService"
			},
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "iamsoft.agroeco.i18n.i18n"
				}
			}
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "iamsoft.agroeco.view",
				"controlId": "app"
			},
			"routes": [
				{
					"pattern": "",
					"name": "master",
					"target": ["detail", "master"]
				},
				{
					"pattern": "detail/{listId}",
					"name": "detail",
					"target": ["master", "detail"],
					"parent": "master"
				},
				{
					"pattern": "items",
					"name": "items",
					"target": ["items"],
					"parent": "detail"
				},
				{
					"pattern": "planning",
					"name": "planning",
					"target": ["planning"],
					"parent": "detail"
				},
				{
					"pattern": "lists/add",
					"name": "addList",
					"target": ["addListForm"],
					"parent": "master"
				},
				{
					"pattern": "add",
					"name": "addItem",
					"target": ["addItemForm"],
					"parent": "items"
				}
			],
			"targets": {
				"master": {
					"viewName": "Master",
					"viewLevel": 1,
					"controlAggregation": "masterPages"
				},
				"detail": {
					"viewName": "Detail",
					"viewLevel": 2,
					"controlAggregation": "detailPages"
				},
				"items": {
					"viewPath": "iamsoft.agroeco.view.detail",
					"viewName": "Items",
					"viewLevel": 3,
					"controlAggregation": "content",
					"controlId":"itemsTab",
					"parent": "detail"
				},
				"planning": {
					"viewPath": "iamsoft.agroeco.view.detail",
					"viewName": "Planning",
					"viewLevel": 3,
					"controlAggregation": "content",
					"controlId":"planningTab",
					"parent": "detail"
				},
				"addListForm": {
					"viewName": "AddListForm",
					"viewLevel": 10,
					"controlAggregation": "detailPages",
					"transition": "flip"
				},
				"addItemForm": {
					"viewName": "AddItemForm",
					"viewLevel": 10,
					"controlAggregation": "detailPages",
					"transition": "flip"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		}
	}
}